<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('.error') %></h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name, t('.first_name') %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :middle_name, t('.middle_name') %><br>
    <%= f.text_field :middle_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, t('.last_name') %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth, t('.birthday') %><br>
    <%= f.date_select :date_of_birth %>
  </div>
  <div class="field">
    <%= f.label :gender, t('.gender') %><br>
    <%= f.select :gender, choices_for_gender %>
  </div>
  <div class="field">
    <%= f.label :status, t('.status') %><br>
    <%= f.select :status, choices_for_status %>
  </div>
  <div class="field">
    <%= f.label :location_id, t('.location') %><br>
    <%= f.select :location_id, choices_for_location %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
